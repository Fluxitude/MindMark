{
  "name": "@mindmark/types",
  "version": "0.1.0",
  "description": "Shared TypeScript types with Typia validation for MindMark",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./bookmark": "./src/bookmark.ts",
    "./collection": "./src/collection.ts",
    "./search": "./src/search.ts",
    "./api": "./src/api.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "typia": "^9.6.0"
  },
  "devDependencies": {
    "@mindmark/typescript-config": "workspace:*",
    "typescript": "^5.6.3",
    "ttypescript": "^1.5.15"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
